// part: metadata

[setup.statement.options]
"bigquery.bulk_ingest.method" = { apply = "storage_write", revert = "load" }

[tags]
broken-driver = "The driver refuses to truncate to microseconds; it will work if the data is only microsecond precision and not nanosecond precision."
sql-type-name = "DATETIME"
variant = "Storage Write API"

// part: input_schema

{
    "format": "+s",
    "children": [
        {
            "name": "idx",
            "format": "l",
            "flags": ["nullable"]
        },
        {
            "name": "value",
            "format": "tsn:",
            "flags": ["nullable"]
        }
    ]
}

// part: input

{"idx": 0, "value": null}
{"idx": 1, "value": 0}
{"idx": 2, "value": -9223372036854775808}
{"idx": 3, "value": 946684800000000000}
{"idx": 4, "value": 1684158330000000000}
{"idx": 5, "value": 9223372036854775807}
